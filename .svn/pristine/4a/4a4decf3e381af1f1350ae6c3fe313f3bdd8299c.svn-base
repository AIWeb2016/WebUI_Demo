.ui-tip-toast {
	color: #333;
	background-color: #fff;
	display: inline-block;
	max-width: 346px;
	padding: 20px;
	text-align: center;
	border: 1px solid #ccc;
	z-index: 9999;
	position: absolute;
	top: 0;
	left: 50%;
}
.ui-tip-toast .span-icon {
	display: inline-block;
	float: left;
	display: block;
	width: 16px;
	height: 16px;
	margin-top: 3px;
	float: left;
}
.span-success{
	background: url(icons/success.png) no-repeat;
}
.span-error{
	background: url(icons/error.png) no-repeat;
}
.span-info{
	background: url(icons/info.png) no-repeat;
}
.span-question{
	background: url(icons/question.png) no-repeat;
}
.span-warn{
	background: url(icons/warn.png) no-repeat;
}
.span-warn-little{
	background: url(icons/warn-little.png) no-repeat;
}
.ui-tip-toast .tip-content {
	font-size: 14px;
	line-height: 20px;
	display: block;
	float: left;
	padding: 0;
	padding-left: 6px;
	max-width: 284px;
	text-align: left;
}
.ui-toast-centent{
	display:block;
	width:auto;
	height: auto;
	overflow: hidden;
}
